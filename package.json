{
  "name": "usa",
  "version": "1.0.0",
  "description": "White Pine - Modern Next.js monorepo with TypeScript, API, and deployment automation",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "build:web": "pnpm --filter='@whitepine/web' build",
    "build:api": "pnpm --filter='@whitepine/api' build",
    "dev": "./scripts/kill-dev-ports.sh && concurrently \"pnpm dev:api\" \"pnpm dev:web\" --names \"API,WEB\" --prefix-colors \"blue,green\"",
    "dev:web": "pnpm --filter='@whitepine/web' dev",
    "dev:api": "pnpm --filter='@whitepine/api' dev",
    "migrate:up": "cd apps/api && pnpm migrate:dev",
    "migrate:down": "cd apps/api && pnpm migrate:down",
    "env:sync": "npx envsyncer",
    "typecheck": "pnpm --recursive typecheck",
    "lint": "pnpm --recursive lint",
    "test": "pnpm typecheck && pnpm lint && pnpm --recursive test",
    "test:only": "pnpm --recursive test",
    "db": "cd apps/api && node scripts/db-connect.js",
    "install-hooks": "./scripts/install-hooks.sh",
    "postinstall": "pnpm install-hooks"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "monorepo",
    "pnpm",
    "api",
    "deployment"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "envsyncer": "^1.0.0"
  }
}
