{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "outDir": ".",
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
