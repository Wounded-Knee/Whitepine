# WhitePine Monorepo Environment Configuration
# Copy this file to .env.local and fill in your actual values
# Use 'pnpm env:sync' to sync this file to all applications

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Global environment (development, production)
NODE_ENV=development

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Production domains
PROD_DOMAIN=whitepine.jpkramer.com
DEV_DOMAIN=whitepinedev.jpkramer.com

# Base URLs for each environment
PROD_BASE_URL=https://whitepine.jpkramer.com
DEV_BASE_URL=https://whitepinedev.jpkramer.com

# Local development URLs
LOCAL_WEB_URL=http://localhost:3001
LOCAL_API_URL=http://localhost:4001

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Production ports
PROD_WEB_PORT=3000
PROD_API_PORT=4000

# Development ports
DEV_WEB_PORT=3001
DEV_API_PORT=4001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection strings
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/whitepine_prod?retryWrites=true&w=majority
MONGODB_URI_DEV=mongodb+srv://username:password@cluster.mongodb.net/whitepine_dev?retryWrites=true&w=majority

# Database names
DB_NAME_PROD=whitepine_prod
DB_NAME_DEV=whitepine_dev

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Google OAuth (shared across all apps)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session secrets (different for each environment)
SESSION_SECRET_PROD=your-production-session-secret-here
SESSION_SECRET_DEV=your-development-session-secret-here

# JWT secrets (different for each environment)
JWT_SECRET_PROD=your-production-jwt-secret-here
JWT_SECRET_DEV=your-development-jwt-secret-here

# NextAuth configuration
NEXTAUTH_SECRET_PROD=your-production-nextauth-secret-here
NEXTAUTH_SECRET_DEV=your-development-nextauth-secret-here

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS credentials (shared across all apps)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 bucket names
S3_BUCKET_PROD=whitepine-uploads-prod
S3_BUCKET_DEV=whitepine-uploads-dev

# =============================================================================
# LIGHTSAIL CONFIGURATION
# =============================================================================

# SSH configuration for Lightsail management
LIGHTSAIL_HOST=your-lightsail-ip-address
SSH_PRIVATE_KEY_PATH=~/.ssh/whitepine-deploy
SSH_USER=deploy

# SSL configuration
SSL_EMAIL=admin@jpkramer.com
SSL_STAGING=false

# Development environment authentication
DEV_PASSWORD=dev123

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS origins (comma-separated)
CORS_ORIGINS_PROD=https://whitepine.jpkramer.com
CORS_ORIGINS_DEV=http://localhost:3001,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Application features
FEATURE_BLOG=true
FEATURE_DOCS=true
FEATURE_AUTH=true
FEATURE_UPLOADS=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Analytics (optional)
GA_ID=

# Error tracking (optional)
SENTRY_DSN=

# Health checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@whitepine.jpkramer.com

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis connection
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug settings
DEBUG=false
DEV_TOOLS=false
REQUEST_LOGGING=true

# =============================================================================
# GITHUB ACTIONS SECRETS (for CI/CD)
# =============================================================================

# These should be set in GitHub Actions environment secrets
# SSH_PRIVATE_KEY=contents-of-your-private-key
# LIGHTSAIL_HOST=your-lightsail-ip
# SSL_EMAIL=admin@jpkramer.com
# DEV_PASSWORD=your-dev-password
# MONGODB_URI_PROD=your-production-mongodb-uri
# MONGODB_URI_DEV=your-development-mongodb-uri
# SESSION_SECRET_PROD=your-production-session-secret
# SESSION_SECRET_DEV=your-development-session-secret
# JWT_SECRET_PROD=your-production-jwt-secret
# JWT_SECRET_DEV=your-development-jwt-secret
# NEXTAUTH_SECRET_PROD=your-production-nextauth-secret
# NEXTAUTH_SECRET_DEV=your-development-nextauth-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env.local and fill in your actual values
# 2. Never commit .env.local to version control
# 3. Use 'pnpm env:sync' to sync this file to all applications
# 4. Each application can override specific values in their own .env.local
# 5. For production, use GitHub Actions environment secrets
# 6. The dotenv package will automatically load this file in each application
