{
  "name": "@whitepine/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "pnpm exec dotenv -e .env.local -- tsx watch src/server.ts",
    "build": "pnpm exec tsup && pnpm build:migrations",
    "build:migrations": "pnpm exec tsup --config tsup.migrations.config.ts",
    "start": "node dist/server.js",
    "lint": "pnpm exec eslint src --ext .ts,.tsx",
    "lint:fix": "pnpm exec eslint src --ext .ts,.tsx --fix",
    "typecheck": "pnpm exec tsc --noEmit",
    "test": "pnpm exec vitest --run",
    "test:watch": "pnpm exec vitest --watch",
    "test:ui": "pnpm exec vitest --ui",
    "test:coverage": "pnpm exec vitest --coverage",
    "clean": "rm -rf dist migrations",
    "clean:build": "rm -rf dist",
    "migrate:dev": "pnpm exec migrate-mongo up --file config/migrate-mongo-config.cjs",
    "migrate:prod": "pnpm exec migrate-mongo up --file config/migrate-mongo-config.cjs --env production",
    "migrate:create": "pnpm exec tsx src/scripts/migration-helper.ts create",
    "migrate:down": "pnpm exec migrate-mongo down --file config/migrate-mongo-config.cjs",
    "migrate:status": "pnpm exec migrate-mongo status --file config/migrate-mongo-config.cjs",
    "migrate:list": "pnpm exec tsx src/scripts/migration-helper.ts list",
    "migrate:helper": "pnpm exec tsx src/scripts/migration-helper.ts",
    "db:seed": "pnpm exec tsx src/scripts/seed.ts",
    "db:reset": "pnpm exec tsx src/scripts/reset.ts",
    "db:backup": "pnpm exec tsx src/scripts/backup.ts",
    "db:restore": "pnpm exec tsx src/scripts/restore.ts"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@whitepine/types": "workspace:*",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.19.0",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pino": "^8.17.2",
    "rate-limiter-flexible": "^5.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-session": "^2.0.48",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
